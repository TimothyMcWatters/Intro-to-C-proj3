#include <stdio.h>
#include <string.h>

int main(void) {

   char userText[150];
   
   printf("Enter input string: \n");
   fgets(userText, 150, stdin);

   while ((userText > 0) && (userText != "q")){
      printf("Enter input string: \n");
      fgets(userText, 150, stdin);
      
   } 
   
   printf("Error: No comma in string.\n");

   return 0;
}